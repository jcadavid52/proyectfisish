    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Cambiar imagen</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="@Url.Action("CambiarImagen","Principal")" method="post" enctype="multipart/form-data">
                    <div class="modal-body">

                        <input type="hidden" name="IMAGEN" value="@Session["imagen"]" />
                        <input type="hidden" name="CORREO" value="@Session["correo"] " />
                        <input type="hidden" name="CLAVE" value="@Session["clave"] " />
                        <input type="hidden" name="CIUDAD" value="@Session["ciudad"] " />
                        <input type="hidden" name="PK_ID_ARTISTA" value="@Session["id_registro"] " />
                        <input type="hidden" name="PAIS" value="@Session["pais"] " />
                        <input type="hidden" name="LOCALIDAD" value="@Session["localidad"] " />
                        <input type="hidden" name="DIRECCION" value="@Session["direccion"] " />
                        <input type="hidden" name="FK_TIPO_PLAN" value="@Session["fk_plan"] " />
                        <input type="hidden" name="NOMBRE_ARTISTA" value="@Session["nombre_artista"] " />
                        <input type="hidden" name="PRIMER_APELLIDO_ARTISTA" value="@Session["primer_apellido"] " />
                        <input type="hidden" name="SEGUNDO_APELLIDO_ARTISTA" value="@Session["segundo_apellido"]" />
                        <input type="hidden" name="TELEFONO" value="@Session["telefono"] " />
                        <input type="file" name="archivo" value="" /><br /><br />


                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <input class="btn btn-primary" type="submit" name="name" value="Cambiar Imagen" />
                    </div>
                </form>
            </div>
        </div>
    </div>

