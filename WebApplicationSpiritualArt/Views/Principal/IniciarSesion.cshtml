
@{
    ViewBag.Title = "IniciarSesion";
}
<body class="body-sesion">

   

    <div class="cont">


        <form action="@Url.Action("IniciarSesionAccion","Principal")" method="post" class="form-sesion">


            <h2>Login</h2>


            <div class="in">
                <label>Usuario</label>
                <input class="form-control" type="text" name="CORREO" value="" placeholder="ingrese usuario" />
            </div>

            <div class="in">
                <label>Contraseña</label>
                <input class="form-control" type="password" name="CLAVE" value="" placeholder="Contraseña" />
            </div>

            <div class="in">

                <input class="btn btn-primary mt-4" type="submit" value="Ingresar" />



            </div>

            <div class="in">

                <h4 style="color:red">@ViewBag.Mensaje</h4>
                
            </div>

        </form>

    </div>

</body>